---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-primary-dark font-[NotoSansTangsa] relative bg-primary-light flex items-center flex-col box-border min-w-[300px]">
    <img src="/Images/bg.jpg" class="object-cover fixed inset-0 w-screen h-screen opacity-10 grayscale dark:grayscale-0 -z-10" alt="">
    <slot />
  </body>
</html>

<style is:global>
	
  ::-webkit-scrollbar {
    background-color: #eae4dd;
    width: 5px;
    height: 0;
  }
  ::-webkit-scrollbar-thumb {
    background-color: #09f3;
    border-radius: 20px;
    box-shadow: 0 0 5px #09f;
  }
  ::-webkit-scrollbar-button {
    height: 5px;
    opacity: 0;
  }


  @font-face {
    font-family: Noto;
    src: url("/fonts/NotoSansTangsa-Medium.ttf");
  }
  * {
    font-family: Noto;
  }
  @media (prefers-color-scheme: dark) {
    ::-webkit-scrollbar {
      background-color: #161b22;
    }
  }


</style>
